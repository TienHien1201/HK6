<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".kem">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/question_text"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Cho các loại kem sau:"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/checkBoxBo"
            android:layout_width="84dp"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Kem bơ" />

        <CheckBox
            android:id="@+id/checkBoxSocola"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Kem socola" />
        <CheckBox
            android:id="@+id/checkBoxChuoi"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Kem chuối" />
        <TextView
            android:id="@+id/question_text1"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Chọn size"
            android:textSize="16sp" />
        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radio_s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S" />

            <RadioButton
                android:id="@+id/radio_m"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="M" />

            <RadioButton
                android:id="@+id/radio_l"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="L" />


        </RadioGroup>

        <TextView
            android:id="@+id/question_text2"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Bạn đã chọn "
            android:textSize="16sp" />

        <EditText
            android:id="@+id/selected_click"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kích cỡ" />

        <EditText
            android:id="@+id/selected_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false" />



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
