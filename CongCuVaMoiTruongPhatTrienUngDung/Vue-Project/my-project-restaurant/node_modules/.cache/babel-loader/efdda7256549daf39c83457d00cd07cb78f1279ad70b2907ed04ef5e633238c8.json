   <section class=\"news-section\">\r\n      <h2>üì∞ Tin T·ª©c</h2>\r\n      <div class=\"news-list\">\r\n        <div class=\"news-item\" v-for=\"news in fillterproductNews\" :key=\"news.id\">\r\n          <img :src=\"news.image\" alt=\"news image\" class=\"news-image\" />\r\n          <h3>{{ news.title }}</h3>\r\n          <p>{{ news.description }}</p>\r\n          <button class=\"read-more\">ƒê·ªçc Ti·∫øp</button>\r\n        </div>\r\n      </div>\r\n      <div class=\"pagination\">\r\n        <button @click=\"changpage(currentpage - 1)\" :disabled=\"currentpage === 1\">\r\n          Trang tr∆∞·ªõc\r\n        </button>\r\n        <button\r\n          v-for=\"page in toltalpageNews\"\r\n          :key=\"page\"\r\n          @click=\"changpage(page)\"\r\n          :class=\"{ active: page === currentpage }\"\r\n        >\r\n          {{ page }}\r\n        </button>\r\n        <button @click=\"changpage(currentpage + 1)\" :disabled=\"currentpage === toltalpage\">\r\n          Trang sau\r\n        </button>\r\n      </div>\r\n    </section>\r\n\r\n    <!-- Store List Section -->\r\n    <section class=\"store-section\">\r\n      <h2>Danh s√°ch c·ª≠a h√†ng</h2>\r\n\r\n      <!-- Store List -->\r\n      <div class=\"store-list\">\r\n        <div v-for=\"store in displayedStores\" :key=\"store.id\" class=\"store-item\">\r\n          <h3>{{ store.name }}</h3>\r\n          <p><strong>ƒê·ªãa ch·ªâ:</strong> {{ store.address }}</p>\r\n          <p><strong>S·ªë ƒëi·ªán tho·∫°i:</strong> {{ store.phone }}</p>\r\n          <p><strong>Gi·ªù ho·∫°t ƒë·ªông:</strong> {{ store.hours }}</p>\r\n          <p><strong>Tr·∫°ng th√°i:</strong> {{ store.status }}</p>\r\n          <button class=\"directions-button\">\r\n            <router-link to=\"/maps\"> Ch·ªâ ƒë∆∞·ªùng </router-link>\r\n          </button>\r\n        </div>\r\n        <button @click=\"loadMoreStores\" class=\"see-more-button\">\r\n          {{ showMore ? '^' : 'Xem th√™m' }}\r\n        </button>\r\n      </div>\r\n    </section>\r\n    <div class=\"map_main\">\r\n      <div class=\"map-responsive\">\r\n        <iframe\r\n          src=\"https://www.google.com/maps/embed/v1/place?key=AIzaSyA0s1a7phLN0iaD6-UE7m4qP-z21pH0eSc&q=Ph∆∞·ªùng+10,+Qu·∫≠n+G√≤+V·∫•p,+TP.HCM\"\r\n          width=\"250\"\r\n          height=\"500\"\r\n          frameborder=\"0\"\r\n          style=\"border: 0; width: 100%\"\r\n          allowfullscreen=\"\"\r\n        ></iframe>\r\n      </div>\r\n    </div>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport Product from './ComProductCoffe.vue';\r\nimport { mapGetters } from 'vuex';\r\nimport TinTucItems from '@/data/TinTuc';\r\nimport storeList from '@/data/storeList';\r\n\r\nexport default {\r\n  name: 'ComHome',\r\n  components: {\r\n    Product,\r\n  },\r\n  data() {\r\n    return {\r\n      showMore: false, // Tr·∫°ng th√°i c·ªßa n√∫t\r\n      currentpage: 1,\r\n      limit: 4,\r\n      categories: ['T·∫•t C·∫£', '‚òïC√† Ph√™', 'Tr√† S·ªØa', 'Tr√† Xanh', 'Tr√°i C√¢y'],\r\n      slideshowImages: [\r\n        require('@/assets/IntroHomeImg.jpg'),\r\n        require('@/assets/IntroHomeImg2.png'),\r\n      ],\r\n      currentImageIndex: 0,\r\n      newsItems: TinTucItems,\r\n      storeList: storeList,\r\n    };\r\n  },\r\n  computed: {\r\n      ...mapGetters(['products']),\r\n    toltalpage() {\r\n      return Math.ceil(this.products.length / this.limit);\r\n    },\r\n     toltalpageNews() {\r\n      return Math.ceil(this.newsItems.length / this.limit);\r\n    },\r\n   fillterproductCoffe() {\r\n  // L·ªçc s·∫£n ph·∫©m c√≥ type l√† 'coffe'\r\n  const coffeProducts = this.products.filter(product => product.type.toLowerCase() === 'coffe');\r\n  \r\n  // T√≠nh to√°n ph·∫°m vi d·ªØ li·ªáu hi·ªÉn th·ªã d·ª±a tr√™n ph√¢n trang\r\n  const start = (this.currentpage - 1) * this.limit;\r\n  const end = start + this.limit;\r\n  \r\n  // Tr·∫£ v·ªÅ danh s√°ch s·∫£n ph·∫©m sau khi ph√¢n trang\r\n  return coffeProducts.slice(start, end);\r\n},\r\n\r\n   fillterproductTea