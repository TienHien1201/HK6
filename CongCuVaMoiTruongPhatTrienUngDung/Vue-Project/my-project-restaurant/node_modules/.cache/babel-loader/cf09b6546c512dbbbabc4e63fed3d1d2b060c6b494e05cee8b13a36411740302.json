{"ast":null,"code":"import users from '@/data/user';\nexport default {\n  name: 'ComSignUp',\n  data() {\n    return {\n      username: '',\n      //an\n      password: '',\n      //123\n      confirmPassword: '',\n      //123\n      error: '',\n      success: '',\n      users: users\n    };\n  },\n  methods: {\n    register() {\n      if (this.password !== this.confirmPassword) {\n        this.error = 'Mật khẩu không đúng';\n        return;\n      }\n\n      // Kiểm tra xem user có tồn tại trong localStorage chưa\n\n      const users = JSON.parse(localStorage.getItem('users')) || [];\n      // Kiểm tra tên có tồn tại trong data chưa\n      const exituser = users.find(x => x.username === this.username);\n      if (exituser) {\n        this.error = 'Tên đã tồn tại!';\n        return;\n      }\n\n      // Tạo 1 đối tượng người dùng mới\n      const userNew = {\n        id: users.length + 1,\n        username: this.username,\n        password: this.password\n      }; // id tự động bằng cách lấy độ dài của mảng\n\n      // Thêm người dùng mới vào mảng users\n      users.push(userNew);\n\n      // Lưu mảng users vào localStorage\n      localStorage.setItem('users', JSON.stringify(users));\n      alert('Đăng ký thành công');\n\n      // Reset các giá trị\n      this.username = '';\n      this.password = '';\n      this.confirmPassword = '';\n      this.error = '';\n\n      // Đăng ký thành công điều hướng qua trang home\n      this.$router.push('/signin');\n    }\n  }\n};","map":{"version":3,"names":["users","name","data","username","password","confirmPassword","error","success","methods","register","JSON","parse","localStorage","getItem","exituser","find","x","userNew","id","length","push","setItem","stringify","alert","$router"],"sources":["D:\\BaiHoc\\HK6\\CongCuVaMoiTruongPhatTrienUngDung\\Vue-Project\\my-project-restaurant\\src\\components\\ComSignUp.vue"],"sourcesContent":["<template>\r\n  <div class=\"login-container\">\r\n    <!-- Background Image -->\r\n    <img src=\"../assets/News/ImgBG.png\" alt=\"Background\" class=\"background-img\" />\r\n    <!-- Hiển thị thông báo lỗi nếu có -->\r\n    <!-- Login Form -->\r\n    <div class=\"login-form\">\r\n      <h2>Đăng nhập</h2>\r\n      <input v-model=\"username\" type=\"text\" placeholder=\"Tên đăng kí\" />\r\n      <input v-model=\"password\" type=\"password\" placeholder=\"Mật khẩu\" />\r\n      <input v-model=\"confirmPassword\" type=\"password\" placeholder=\"Xác nhận mật khẩu\" />\r\n      <button @click=\"register\">ĐĂNG KÍ</button>\r\n      <p v-if=\"error\" class=\"error-message\">{{ error }}</p>\r\n      \r\n      <div class=\"social-login\">\r\n        <button>Facebook</button>\r\n        <span>HOẶC</span>\r\n        <button>Google</button>\r\n      </div>\r\n      <p>Bạn mới biết đến ABC?\r\n      \r\n        <routerLink to=\"/signin\"> Đăng Nhập</routerLink>\r\n        </p>\r\n    </div>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport users from '@/data/user';\r\nexport default {\r\n  name: 'ComSignUp',\r\n  data() {\r\n    return {\r\n      username: '', //an\r\n      password: '', //123\r\n      confirmPassword: '', //123\r\n      error: '',\r\n      success: '',\r\n      users: users,\r\n    };\r\n  },\r\n  methods: {\r\n    register() {\r\n      if (this.password !== this.confirmPassword) {\r\n        this.error = 'Mật khẩu không đúng';\r\n        return;\r\n      }\r\n\r\n      // Kiểm tra xem user có tồn tại trong localStorage chưa\r\n\r\n      const users = JSON.parse(localStorage.getItem('users')) || [];\r\n      // Kiểm tra tên có tồn tại trong data chưa\r\n      const exituser = users.find((x) => x.username === this.username);\r\n      if (exituser) {\r\n        this.error = 'Tên đã tồn tại!';\r\n        return;\r\n      }\r\n\r\n      // Tạo 1 đối tượng người dùng mới\r\n      const userNew = {\r\n        id: users.length + 1,\r\n        username: this.username,\r\n        password: this.password,\r\n      }; // id tự động bằng cách lấy độ dài của mảng\r\n\r\n      // Thêm người dùng mới vào mảng users\r\n      users.push(userNew);\r\n\r\n      // Lưu mảng users vào localStorage\r\n      localStorage.setItem('users', JSON.stringify(users));\r\n\r\n      alert('Đăng ký thành công');\r\n\r\n      // Reset các giá trị\r\n      this.username = '';\r\n      this.password = '';\r\n      this.confirmPassword = '';\r\n      this.error = '';\r\n\r\n      // Đăng ký thành công điều hướng qua trang home\r\n      this.$router.push('/signin');\r\n    },\r\n  },\r\n};\r\n</script>\r\n\r\n<style scoped>\r\n.login-container {\r\n  position: relative;\r\n  width: 100%;\r\n  height: 100vh;\r\n  display: flex;\r\n  justify-content: center;\r\n  align-items: center;\r\n}\r\n\r\n.background-img {\r\n  position: absolute;\r\n  top: 0;\r\n  left: 0;\r\n  width: 100%;\r\n  height: 100%;\r\n  object-fit: cover;\r\n  z-index: -1;\r\n}\r\n\r\n.login-form {\r\n  background-color: #c6a464;\r\n  padding: 20px;\r\n  border-radius: 10px;\r\n  width: 300px;\r\n  text-align: center;\r\n  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);\r\n}\r\n\r\n.login-form h2 {\r\n  margin-bottom: 20px;\r\n}\r\n\r\n.login-form input {\r\n  width: 100%;\r\n  padding: 10px;\r\n  margin: 10px 0;\r\n  border: 1px solid #ddd;\r\n  border-radius: 5px;\r\n}\r\n\r\n.login-form button {\r\n  width: 100%;\r\n  padding: 10px;\r\n  margin: 10px 0;\r\n  background-color: #ff5722;\r\n  color: white;\r\n  border: none;\r\n  border-radius: 5px;\r\n  cursor: pointer;\r\n}\r\n\r\n.login-options {\r\n  display: flex;\r\n  justify-content: space-between;\r\n  align-items: center;\r\n  font-size: 0.9em;\r\n  color: #555;\r\n}\r\n\r\n.social-login button {\r\n  width: 45%;\r\n  padding: 10px;\r\n  margin-top: 10px;\r\n  border: none;\r\n  border-radius: 5px;\r\n  cursor: pointer;\r\n}\r\n\r\n.social-login button:first-child {\r\n  background-color: #3b5998; /* Facebook color */\r\n  color: white;\r\n}\r\n\r\n.social-login button:last-child {\r\n  background-color: #db4437; /* Google color */\r\n  color: white;\r\n}\r\n\r\n.login-form p {\r\n  margin-top: 20px;\r\n  font-size: 0.9em;\r\n}\r\n\r\n.login-form p a {\r\n  color: #ff5722;\r\n  text-decoration: none;\r\n}\r\n</style>\r\n"],"mappings":"AA4BA,OAAOA,KAAI,MAAO,aAAa;AAC/B,eAAe;EACbC,IAAI,EAAE,WAAW;EACjBC,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,QAAQ,EAAE,EAAE;MAAE;MACdC,QAAQ,EAAE,EAAE;MAAE;MACdC,eAAe,EAAE,EAAE;MAAE;MACrBC,KAAK,EAAE,EAAE;MACTC,OAAO,EAAE,EAAE;MACXP,KAAK,EAAEA;IACT,CAAC;EACH,CAAC;EACDQ,OAAO,EAAE;IACPC,QAAQA,CAAA,EAAG;MACT,IAAI,IAAI,CAACL,QAAO,KAAM,IAAI,CAACC,eAAe,EAAE;QAC1C,IAAI,CAACC,KAAI,GAAI,qBAAqB;QAClC;MACF;;MAEA;;MAEA,MAAMN,KAAI,GAAIU,IAAI,CAACC,KAAK,CAACC,YAAY,CAACC,OAAO,CAAC,OAAO,CAAC,KAAK,EAAE;MAC7D;MACA,MAAMC,QAAO,GAAId,KAAK,CAACe,IAAI,CAAEC,CAAC,IAAKA,CAAC,CAACb,QAAO,KAAM,IAAI,CAACA,QAAQ,CAAC;MAChE,IAAIW,QAAQ,EAAE;QACZ,IAAI,CAACR,KAAI,GAAI,iBAAiB;QAC9B;MACF;;MAEA;MACA,MAAMW,OAAM,GAAI;QACdC,EAAE,EAAElB,KAAK,CAACmB,MAAK,GAAI,CAAC;QACpBhB,QAAQ,EAAE,IAAI,CAACA,QAAQ;QACvBC,QAAQ,EAAE,IAAI,CAACA;MACjB,CAAC,EAAE;;MAEH;MACAJ,KAAK,CAACoB,IAAI,CAACH,OAAO,CAAC;;MAEnB;MACAL,YAAY,CAACS,OAAO,CAAC,OAAO,EAAEX,IAAI,CAACY,SAAS,CAACtB,KAAK,CAAC,CAAC;MAEpDuB,KAAK,CAAC,oBAAoB,CAAC;;MAE3B;MACA,IAAI,CAACpB,QAAO,GAAI,EAAE;MAClB,IAAI,CAACC,QAAO,GAAI,EAAE;MAClB,IAAI,CAACC,eAAc,GAAI,EAAE;MACzB,IAAI,CAACC,KAAI,GAAI,EAAE;;MAEf;MACA,IAAI,CAACkB,OAAO,CAACJ,IAAI,CAAC,SAAS,CAAC;IAC9B;EACF;AACF,CAAC","ignoreList":[]},"metadata":{},"sourceType":"module","externalDependencies":[]}