{"ast":null,"code":"import axios from 'axios';\nimport APIURL from '../constraint';\nexport default {\n  data() {\n    return {\n      products: [] // Dữ liệu sản phẩm\n    };\n  },\n  methods: {\n    // Gọi API để lấy danh sách sản phẩm\n    async fetchProducts() {\n      try {\n        const response = await axios.get(`${APIURL}productDrink`);\n        this.products = response.data;\n      } catch (error) {\n        console.error('Lỗi khi lấy danh sách sản phẩm:', error);\n      }\n    },\n    // Format giá tiền\n    formatPrice(price) {\n      return new Intl.NumberFormat('vi-VN', {\n        style: 'currency',\n        currency: 'VND'\n      }).format(price);\n    }\n  },\n  mounted() {\n    this.fetchProducts();\n  }\n};","map":{"version":3,"names":["axios","APIURL","data","products","methods","fetchProducts","response","get","error","console","formatPrice","price","Intl","NumberFormat","style","currency","format","mounted"],"sources":["D:\\BaiHoc\\HK6\\CongCuVaMoiTruongPhatTrienUngDung\\Vue-Project\\my-project-restaurant\\src\\components\\ComProduct.vue"],"sourcesContent":["<template>\r\n  <div>\r\n    <!-- Hiển thị danh sách sản phẩm -->\r\n    <div\r\n      class=\"menu-item-coffes\"\r\n      v-for=\"product in products\"\r\n      :key=\"product.id\"\r\n    >\r\n      <router-link\r\n        :to=\"{ name: 'ProductDetail', params: { id: product.id } }\"\r\n        class=\"menu-item-link\"\r\n      >\r\n        <img :src=\"product.image\" :alt=\"product.name\" class=\"menu-item-image\" />\r\n      </router-link>\r\n      <div class=\"menu-item-info\">\r\n        <h3 class=\"menu-item-name\">{{ product.name }}</h3>\r\n        <p class=\"menu-item-price\">{{ formatPrice(product.price) }}</p>\r\n      </div>\r\n    </div>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport axios from 'axios';\r\nimport APIURL from '../constraint';\r\n\r\nexport default {\r\n  data() {\r\n    return {\r\n      products: [], // Dữ liệu sản phẩm\r\n    };\r\n  },\r\n  methods: {\r\n