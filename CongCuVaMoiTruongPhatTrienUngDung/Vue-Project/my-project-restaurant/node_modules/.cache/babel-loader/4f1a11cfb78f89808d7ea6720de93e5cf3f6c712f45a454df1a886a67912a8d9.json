{"ast":null,"code":"import \"core-js/modules/es.array.push.js\";\nimport users from '@/data/user';\nimport eventBus from '@/evenBus';\nexport default {\n  name: 'ComSignIn',\n  data() {\n    return {\n      username: '',\n      //an\n      password: '',\n      //1234\n      error: '',\n      users: users\n    };\n  },\n  methods: {\n    SignIn() {\n      const users = JSON.parse(localStorage.getItem('users')) || [];\n      const trimmedUsername = this.username.trim();\n      const trimmedPassword = this.password.trim();\n      const user = users.find(x => x.username === trimmedUsername && x.password === trimmedPassword);\n      if (user) {\n        // Lưu thông tin vào local\n        localStorage.setItem('userCurrent', JSON.stringify(user));\n        eventBus.emit('loginSuccess', user);\n        this.$router.push('/');\n      } else {\n        this.error = 'Tên đăng nhập, mật khẩu không đúng';\n      }\n    }\n  }\n};","map":{"version":3,"names":["users","eventBus","name","data","username","password","error","methods","SignIn","JSON","parse","localStorage","getItem","trimmedUsername","trim","trimmedPassword","user","find","x","setItem","stringify","emit","$router","push"],"sources":["D:\\BaiHoc\\HK6\\CongCuVaMoiTruongPhatTrienUngDung\\Vue-Project\\my-project-restaurant\\src\\components\\ComSignIn.vue"],"sourcesContent":["<template>\r\n  <div class=\"login-container\">\r\n    <!-- Background Image -->\r\n    <img src=\"../assets/News/ImgBG.png\" alt=\"Background\" class=\"background-img\" />\r\n\r\n    <!-- Login Form -->\r\n    <div class=\"login-form\">\r\n      <h2>Đăng nhập</h2>\r\n      <input v-model=\"username\" type=\"text\" placeholder=\"Email/Số điện thoại/Tên đăng nhập\" />\r\n      <input v-model=\"password\" type=\"password\" placeholder=\"Mật khẩu\" />\r\n      <button @click=\"SignIn\">ĐĂNG NHẬP</button>\r\n      <P v-if=\"error\">{{ error }}</P>\r\n      <div class=\"login-options\">\r\n        <a href=\"#\">Quên mật khẩu</a>\r\n        <span>HOẶC</span>\r\n        <a href=\"#\">Đăng nhập với SMS</a>\r\n      </div>\r\n      <div class=\"social-login\">\r\n        <button>Facebook</button>\r\n        <button>Google</button>\r\n      </div>\r\n      <p>Bạn mới biết đến ABC? <router-link to=\"/signup\">Đăng ký</router-link></p>\r\n    </div>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport users from '@/data/user';\r\nimport eventBus from '@/evenBus';\r\nexport default {\r\n  name: 'ComSignIn',\r\n  data() {\r\n    return {\r\n      username: '', //an\r\n      password: '', //1234\r\n      error: '',\r\n      users: users,\r\n    };\r\n  },\r\n  methods: {\r\n    SignIn() {\r\n      const users = JSON.parse(localStorage.getItem('users')) || [];\r\n      const trimmedUsername = this.username.trim();\r\n      const trimmedPassword = this.password.trim();\r\n\r\n      const user = users.find(\r\n        (x) => x.username === trimmedUsername && x.password === trimmedPassword\r\n      );\r\n      if (user) {\r\n        // Lưu thông tin vào local\r\n        localStorage.setItem('userCurrent', JSON.stringify(user));\r\n        eventBus.emit('loginSuccess', user);\r\n        this.$router.push('/');\r\n      } else {\r\n        this.error = 'Tên đăng nhập, mật khẩu không đúng';\r\n      }\r\n    },\r\n  },\r\n};\r\n</script>\r\n\r\n<style scoped>\r\n.login-container {\r\n  position: relative;\r\n  width: 100%;\r\n  height: 100vh;\r\n  display: flex;\r\n  justify-content: center;\r\n  align-items: center;\r\n}\r\n\r\n.background-img {\r\n  position: absolute;\r\n  top: 0;\r\n  left: 0;\r\n  width: 100%;\r\n  height: 100%;\r\n  object-fit: cover;\r\n  z-index: -1;\r\n}\r\n\r\n.login-form {\r\n  background-color: #c6a464;\r\n  padding: 20px;\r\n  border-radius: 10px;\r\n  width: 300px;\r\n  text-align: center;\r\n  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);\r\n}\r\n\r\n.login-form h2 {\r\n  margin-bottom: 20px;\r\n}\r\n\r\n.login-form input {\r\n  width: 100%;\r\n  padding: 10px;\r\n  margin: 10px 0;\r\n  border: 1px solid #ddd;\r\n  border-radius: 5px;\r\n}\r\n\r\n.login-form button {\r\n  width: 100%;\r\n  padding: 10px;\r\n  margin: 10px 0;\r\n  background-color: #ff5722;\r\n  color: white;\r\n  border: none;\r\n  border-radius: 5px;\r\n  cursor: pointer;\r\n}\r\n\r\n.login-options {\r\n  display: flex;\r\n  justify-content: space-between;\r\n  align-items: center;\r\n  font-size: 0.9em;\r\n  color: #555;\r\n}\r\n\r\n.social-login button {\r\n  width: 45%;\r\n  padding: 10px;\r\n  margin-top: 10px;\r\n  border: none;\r\n  border-radius: 5px;\r\n  cursor: pointer;\r\n}\r\n\r\n.social-login button:first-child {\r\n  background-color: #3b5998; /* Facebook color */\r\n  color: white;\r\n}\r\n\r\n.social-login button:last-child {\r\n  background-color: #db4437; /* Google color */\r\n  color: white;\r\n}\r\n\r\n.login-form p {\r\n  margin-top: 20px;\r\n  font-size: 0.9em;\r\n}\r\n\r\n.login-form p a {\r\n  color: #ff5722;\r\n  text-decoration: none;\r\n}\r\n</style>\r\n"],"mappings":";AA2BA,OAAOA,KAAI,MAAO,aAAa;AAC/B,OAAOC,QAAO,MAAO,WAAW;AAChC,eAAe;EACbC,IAAI,EAAE,WAAW;EACjBC,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,QAAQ,EAAE,EAAE;MAAE;MACdC,QAAQ,EAAE,EAAE;MAAE;MACdC,KAAK,EAAE,EAAE;MACTN,KAAK,EAAEA;IACT,CAAC;EACH,CAAC;EACDO,OAAO,EAAE;IACPC,MAAMA,CAAA,EAAG;MACP,MAAMR,KAAI,GAAIS,IAAI,CAACC,KAAK,CAACC,YAAY,CAACC,OAAO,CAAC,OAAO,CAAC,KAAK,EAAE;MAC7D,MAAMC,eAAc,GAAI,IAAI,CAACT,QAAQ,CAACU,IAAI,CAAC,CAAC;MAC5C,MAAMC,eAAc,GAAI,IAAI,CAACV,QAAQ,CAACS,IAAI,CAAC,CAAC;MAE5C,MAAME,IAAG,GAAIhB,KAAK,CAACiB,IAAI,CACpBC,CAAC,IAAKA,CAAC,CAACd,QAAO,KAAMS,eAAc,IAAKK,CAAC,CAACb,QAAO,KAAMU,eAC1D,CAAC;MACD,IAAIC,IAAI,EAAE;QACR;QACAL,YAAY,CAACQ,OAAO,CAAC,aAAa,EAAEV,IAAI,CAACW,SAAS,CAACJ,IAAI,CAAC,CAAC;QACzDf,QAAQ,CAACoB,IAAI,CAAC,cAAc,EAAEL,IAAI,CAAC;QACnC,IAAI,CAACM,OAAO,CAACC,IAAI,CAAC,GAAG,CAAC;MACxB,OAAO;QACL,IAAI,CAACjB,KAAI,GAAI,oCAAoC;MACnD;IACF;EACF;AACF,CAAC","ignoreList":[]},"metadata":{},"sourceType":"module","externalDependencies":[]}